{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prd-server;Database=PortalPacientes;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "ApiSettings": {
    "BaseUrl": "https://api.cardioinfantil.com",
    "TimeoutSeconds": 60,
    "EnableDetailedErrors": false
  },
  "Authentication": {
    "JwtSecret": "production-jwt-secret-key-must-be-secure",
    "JwtExpirationHours": 1,
    "Issuer": "PortalPacientes",
    "Audience": "PortalPacientesUsers"
  },
  "ExternalServices": {
    "EmailService": {
      "BaseUrl": "https://email.cardioinfantil.com",
      "ApiKey": "production-email-api-key"
    },
    "NotificationService": {
      "BaseUrl": "https://notifications.cardioinfantil.com",
      "ApiKey": "production-notifications-api-key"
    }
  },
  "Features": {
    "EnableSwagger": false,
    "EnableDetailedLogging": false,
    "EnableMetrics": true
  },
  "HealthChecks": {
    "Enabled": true,
    "UIEnabled": false,
    "EvaluationTimeInSeconds": 60,
    "MaximumHistoryEntriesPerEndpoint": 30,
    "Services": {
      "EmailService": {
        "Enabled": true,
        "TimeoutSeconds": 5
      },
      "NotificationService": {
        "Enabled": true,
        "TimeoutSeconds": 5
      }
    }
  },
  "Auditing": {
    "Enabled": true,
    "PlaceholderUserId": "PRD-USER"
  }
}
