# Variables de Ambiente para Portal Pacientes API
# Copia este archivo como .env y configura los valores específicos para tu ambiente

# Ambiente de ejecución (Development, qa, pdn)
ASPNETCORE_ENVIRONMENT=Development

# URLs de la aplicación
ASPNETCORE_URLS=https://localhost:7125;http://localhost:5254

# Configuración de Base de Datos
ConnectionStrings__DefaultConnection=Server=(localdb)\mssqllocaldb;Database=PortalPacientes;Trusted_Connection=true;

# Configuración de Autenticación
Authentication__JwtSecret=your-super-secret-jwt-key-here
Authentication__JwtExpirationHours=8
Authentication__Issuer=PortalPacientes
Authentication__Audience=PortalPacientesUsers

# Servicios Externos
ExternalServices__EmailService__BaseUrl=https://email-service.com
ExternalServices__EmailService__ApiKey=your-email-api-key
ExternalServices__NotificationService__BaseUrl=https://notification-service.com
ExternalServices__NotificationService__ApiKey=your-notification-api-key

# Configuración de Features
Features__EnableSwagger=true
Features__EnableDetailedLogging=true
Features__EnableMetrics=false

# Configuración de API
ApiSettings__BaseUrl=https://localhost:7125
ApiSettings__TimeoutSeconds=30
ApiSettings__EnableDetailedErrors=true

# Configuración de Health Checks
HealthChecks__Enabled=true
HealthChecks__UIEnabled=true
HealthChecks__EvaluationTimeInSeconds=30
HealthChecks__MaximumHistoryEntriesPerEndpoint=50
HealthChecks__Services__EmailService__Enabled=false
HealthChecks__Services__EmailService__TimeoutSeconds=5
HealthChecks__Services__NotificationService__Enabled=false
HealthChecks__Services__NotificationService__TimeoutSeconds=5