{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    },
    "RetentionDays": 14,
    "CleanupHour": 3
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 750
      },
      {
        "Endpoint": "*:/api/auth/*",
        "Period": "1m",
        "Limit": 75
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-qa-server;Database=__PROJECT_NAME___DB_QA;User Id=your-user;Password=your-password;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  },
  "Database": {
    "Provider": "SqlServer"
  },
  "ApiSettings": {
    "BaseUrl": "https://api-qa.yourcompany.com",
    "TimeoutSeconds": 30,
    "EnableDetailedErrors": true
  },
  "Authentication": {
    "JwtSecret": "qa-jwt-secret-key-not-for-production-must-be-at-least-32-characters-long",
    "JwtExpirationHours": 8,
    "Issuer": "__PROJECT_NAME___API_QA",
    "Audience": "__PROJECT_NAME___Users_QA"
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedLogging": true,
    "EnableMetrics": true
  },
  "HealthChecks": {
    "Enabled": true,
    "UIEnabled": true,
    "EvaluationTimeInSeconds": 20,
    "MaximumHistoryEntriesPerEndpoint": 75
  },
  "Auditing": {
    "Enabled": true,
    "PlaceholderUserId": "QA-USER"
  }
}
