{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "RetentionDays": 30,
    "CleanupHour": 3
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 500
      },
      {
        "Endpoint": "*:/api/auth/*",
        "Period": "1m",
        "Limit": 50
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-prod-server;Database=__PROJECT_NAME___DB;User Id=your-user;Password=your-password;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  },
  "Database": {
    "Provider": "SqlServer"
  },
  "ApiSettings": {
    "BaseUrl": "https://api.yourcompany.com",
    "TimeoutSeconds": 30,
    "EnableDetailedErrors": false
  },
  "Authentication": {
    "JwtSecret": "CHANGE-THIS-TO-A-SECURE-SECRET-KEY-MINIMUM-32-CHARACTERS-LONG-FOR-PRODUCTION",
    "JwtExpirationHours": 8,
    "Issuer": "__PROJECT_NAME___API",
    "Audience": "__PROJECT_NAME___Clients"
  },
  "Features": {
    "EnableSwagger": false,
    "EnableDetailedLogging": false,
    "EnableMetrics": true
  },
  "HealthChecks": {
    "Enabled": true,
    "UIEnabled": false,
    "EvaluationTimeInSeconds": 30,
    "MaximumHistoryEntriesPerEndpoint": 50
  },
  "Auditing": {
    "Enabled": true,
    "PlaceholderUserId": "SYSTEM"
  }
}
